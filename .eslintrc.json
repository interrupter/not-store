{
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"node": true,
		"mongo": true,
		"mocha": true
	},
	"plugins": [
    "svelte3"
  ],
	"overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			"tab", {
				"SwitchCase": 0
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"semi": [
			"error",
			"always"
		],
		"no-useless-escape": [0]
	}
}
