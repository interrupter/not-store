{
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mongo": true,
        "mocha": true
    },
    "plugins": ["perfectionist"],
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-useless-escape": [0],
        "perfectionist/sort-objects": [
            "error",
            {
                "type": "natural",
                "order": "asc"
            }
        ]
    }
}
